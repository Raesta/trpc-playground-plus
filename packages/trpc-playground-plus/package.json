{
  "name": "trpc-playground-plus",
  "version": "0.5.0",
  "description": "Universal tRPC playground for any server (Fastify, etc.)",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raesta/trpc-playground-plus.git"
  },
  "author": "RÃ©my Mulet <contact@underflow-studio.com>",
  "license": "MIT",
  "keywords": [
    "trpc",
    "playground",
    "api"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build:lib": "vite build --config vite.config.ts",
    "build:app": "vite build --config vite.app.config.ts",
    "build": "pnpm run build:lib && pnpm run build:app",
    "dev": "vite",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.7",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.2",
    "@fastify/static": "^8.1.1",
    "@trpc/client": "^11.1.1",
    "@trpc/server": "^11.1.1",
    "@uiw/codemirror-theme-vscode": "^4.25.1",
    "@uiw/react-codemirror": "^4.25.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "superjson": "^2.2.2",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.23.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.5.0",
    "fastify": "^5.3.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.20",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "fastify": "^5.3.2"
  }
}